<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="/styles/style.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="w-1/5 mx-auto">
      <div class="mt-4">
        <a
          href="/"
          class="flex items-center my-2 px-4 py-2 hover:bg-gray-200 hover:cursor-pointer rounded-full"
        >
          <CiHome
            size="24px"
            class="ml-2"
          ></CiHome>
          <h1 class="font-bold text-lg ml-2">Trang chủ</h1>
        </a>

        <a
          href="/profile"
          class="flex items-center my-2 px-4 py-2 hover:bg-gray-200 hover:cursor-pointer rounded-full"
        >
          <CiUser
            size="24px"
            class="ml-2"
          ></CiUser>
          <h1 class="font-bold text-lg ml-2">Hồ sơ</h1>
        </a>
        <div class="flex items-center my-2 px-4 py-2 hover:bg-gray-200 hover:cursor-pointer rounded-full">
          <CiBookmark
            size="24px"
            class="ml-2"
          ></CiBookmark>
          <h1 class="font-bold text-lg ml-2">Dấu trang</h1>
        </div>
        <div class="flex items-center my-2 px-4 py-2 hover:bg-gray-200 hover:cursor-pointer rounded-full">
          <AiOutlineLogout
            size="24px"
            class="ml-2"
          ></AiOutlineLogout>
          <h1
            onclick="logOut()"
            class="font-bold text-lg ml-2"
          >
            Đăng xuất
          </h1>
        </div>
      </div>
      <form
        method="post"
        action="/create-post"
        class="max-w-md mx-auto bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4"
      >
        <div class="mb-4">
          <label
            for="post-text"
            class="block text-gray-700 text-sm font-bold mb-2"
            >Post Text:</label
          >
          <textarea
            id="post-text"
            name="postText"
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
            placeholder="Enter your post text..."
          ></textarea>
        </div>
        <div class="flex items-center justify-center">
          <button
            type="submit"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline"
          >
            Post
          </button>
        </div>
      </form>
    </div>
    <script>
      function logOut() {
        fetch('/api/auth/logout', {
          method: 'POST', // Phương thức POST
          headers: {
            'Content-Type': 'application/json', // Định dạng của dữ liệu gửi đi
          },
          body: JSON.stringify({}), // Dữ liệu gửi đi, rỗng trong trường hợp này
        })
          .then((response) => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then((data) => {
            window.location.href = '/login';
          })
          .catch((error) => {
            console.error('There was a problem with your fetch operation:', error);
          });
      }
    </script>
  </body>
</html>
